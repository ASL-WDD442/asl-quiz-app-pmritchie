extends ../_layout
include ../_includes/link_mixin
block content
    h1.heading = quiz.name
    +link('/admin/quizzes/edit/'+quiz.id, 'Edit', 'icon = fa-edit')
    h2.heading Questions
    ul.list
        for question in questions
            li.list__item
                span.list__item__title= question.title
                +link('/admin/questions/'+question.id, 'View', 'fa-eye', 'primary__link')
                +link('/admin/questions/delete/'+question.id, 'Delete', 'fa-trash', 'secondary__link')
                
    +link('/admin/questions/new?quizId='+quiz.id, 'Create New Question','fa-plus', 'primary__link__button')
