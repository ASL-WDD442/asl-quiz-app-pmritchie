extends ../_layout
include ../_includes/link_mixin
block content
    h1.heading= id ? 'Edit Question' : 'Create A New Question'
    form.form(method="POST")
        label.form__label
            span Question Title
            input.form__input(type="text", name='title', value=title)
            input.form__input(type="hidden", name='quizId', value=quizId)
        button.button(type="submit") Save Question
        if errors
            for error in errors
                small.flash=error.msg